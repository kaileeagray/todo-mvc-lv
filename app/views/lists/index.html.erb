<header id="header">
  <h1>TODO Rails</h1>

  <%= form_for(@list) do |f| %>
    <%= f.text_field :name, :id => "new-todo", :placeholder => "Create a new list!!!", :autofocus => true %>
  <% end %>
</header>

<section id="main">
  <label for="toggle-all">Mark all as complete</label>
  <ul id="todo-list">
    <% @lists.each do |list| %>
    <li>
      <div class="view">
        <label><%= link_to list.name, list %></label>
      </div>
    </li>
    <% end %>
  </ul>
</section>

<footer id="footer">
  <% if logged_in? %>
    You are logged in as: <%= current_user.username %>

    <p><%= link_to "Logout", logout_path %></p>
  <% end %>

</footer>
